varnishtest "Test that we can't recurse restarts forever"

varnish v1 -vcl { 
	backend bad { 
		.host = "${bad_ip}"; .port = "9090";
	}

	sub vcl_recv {
	    set req.backend = bad;
	}
	sub vcl_error { 
	    return (restart);
	}
 } -start 

client c1 {
        txreq -url "/"
        rxresp
        expect resp.status == 503
} -run
